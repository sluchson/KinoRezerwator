<Window x:Class="KinoRezerwator.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Admina - Logowanie" Height="250" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Zaloguj się do panelu" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Login:"/>
            <TextBox x:Name="txtLogin" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Hasło:"/>
            <PasswordBox x:Name="txtHaslo" Height="25" Margin="0,0,0,20"/>

            <Button x:Name="btnZaloguj" Content="Zaloguj" Height="30" Click="btnZaloguj_Click"/>
        </StackPanel>
    </Grid>
</Window>